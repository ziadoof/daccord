{% extends 'base.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ voyage.date ? voyage.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ voyage.time ? voyage.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Highway</th>
                <td>{{ voyage.highway ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ voyage.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('carpool_voyage_index') }}">back to list</a>

    <a href="{{ path('carpool_voyage_edit', {'id': voyage.id}) }}">edit</a>

    {{ include('carpool_voyage/_delete_form.html.twig') }}
{% endblock %}
