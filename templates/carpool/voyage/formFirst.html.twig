
{% form_theme form 'jquery.collection.html.twig' 'StationCollectionType.html.twig'%}
{{ form_start(form,{'attr':{'id':'voyage-form-new2'}}) }}
<div class="new-voyage mt-2">
    <div class="row local-border px-2 py-2">
        <div class="col-md-6">
            <div class="row">
                <div class="col">
                    <div id="map" {#style="width:auto; height:50vh"#} class="map-style"></div>
                    <div id="viewContainer" class="text-center mt-2"></div>
                </div>
            </div>
            {{ form_widget(form.duration) }}
            {{ form_widget(form.distance) }}
        </div>
        <div class="col-md-6 my-1 py-4">
            <div class="row">
                <div class="col-5">
                    {{ form_row(form.date) }}
                </div>
                <div class="col-7">
                    {{ form_row(form.time) }}
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    {{ form_row(form.mainDeparture) }}
                </div>
                <div class="col-7">
                    {{ form_row(form.placeMainDeparture) }}
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    {{ form_row(form.mainArrival) }}
                </div>
                <div class="col-7">
                    {{ form_row(form.placeMainArrival) }}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-12">
                    {{ form_widget(form.stations) }}
                </div>
            </div>
        </div>
        <div class="col-12 mt-5">
            <button class="btn btn-info float-right">{% trans %}Continue {% endtrans %}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}
