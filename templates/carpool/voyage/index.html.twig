{% extends "layout_user.html.twig" %}

{% block title %}My Voyage{% endblock %}

{% block content %}
        <h5 class="text-center blued">My voyage</h5>
        <div class="voyag-index">
             <div class="row">
                 <div class="col-md-2 offset-10 mb-4">
                     <a class="btn btn-block btn-info" href="{{ path('voyage_new',{'type':'first'}) }}">New voyage</a>
                 </div>
             </div>
            {% if voyages is not empty %}
                {% for voyage in voyages %}
                    <div class="row">
                        <div class="col-md-12 px-2">
                            <div id="meetup_index" class="meetup_index">
                                <a href="{{ path('voyage_show', {'id': voyage.id}) }}"class="">
                                    <div class="px-2 border-deal">
                                        <div class="row">
                                            <div class="col-md-3 my-1 image_meetup_index">
                                                <img class="" src="{{ voyage.creator.photoCarpool() }}" alt="car image"/>
                                            </div>
                                            <div class="col-md-8 float-left py-2">
                                                <div class="">
                                                    <h4 class="meetup-text blued d-inline">{{ voyage.mainDeparture.name }}</h4>
                                                    <i class="fas fa-arrow-right rosed d-inline mx-4"></i>
                                                    <h4 class="meetup-text blued d-inline">{{ voyage.mainArrival.name }}</h4>
                                                </div>
                                                <div class="">
                                                    <span class=" mt-3"><span class="blued">{{ 'Date : ' }}</span>{{ voyage.date|date('d M Y') }}</span>
                                                </div>
                                                <div class="">
                                                    <span class=" mt-3"><span class="blued">{{ 'Time : ' }}</span>{{ voyage.time|date('H:i') }}</span>
                                                </div>
                                            </div>
                                            {% if voyage.isFinish() %}
                                                <div class="col-md-1">
                                                    <span class="badge badge-danger float-right mt-2">Finish</span>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="pagination-search row justify-content-center mt-4">
                    <div class="navigation">
                        {{ knp_pagination_render(voyages) }}
                    </div>
                </div>
            {% else %}
                <h1 class="text-center title-blue">You have not voyages</h1>
            {% endif %}
        </div>
{% endblock %}
