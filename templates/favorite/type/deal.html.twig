<div class="row">
    <div class="col-md-12 px-2">
        <div id="meetup_index" class="meetup_index">
            <a href="{{ path('deal_show', {'id': oneFavorite.deal.id}) }}"class="">
                <div class="px-2 border-deal">
                    <div class="row">
                        <div class="col-md-3 my-1 image_meetup_index">
                            <img class="" src="/assets/images/favorite/deal.jpg" alt="deal image"/>
                        </div>
                        <div class="col-md-9 float-left py-2">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="">
                                        <h4 class="meetup-text rosed">Suggested Deals</h4>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{{ 'Category : ' }}</span>{{ oneFavorite.deal.category }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{{ 'Suggested at : ' }}</span>{{ oneFavorite.deal.suggestionDate|date('d M Y') }}</span>
                                    </div>
                                    <div class="">
                                        {% if app.user is same as (oneFavorite.deal.offerUser) %}
                                        <span class=" mt-3"><span class="blued">{{ 'With : ' }}</span>{{ oneFavorite.deal.demandUser.firstname|title }}</span>
                                        {% else %}
                                        <span class=" mt-3"><span class="blued">{{ 'With : ' }}</span>{{ oneFavorite.deal.offerUser.firstname|title }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col ">
                                    {% set isFavorite = 'false' %}
                                    {#data-favorite must be string not boolean#}
                                    {% for favorite in app.user.getFavoritesByType('deal')  %}
                                        {% if favorite.deal is same as (oneFavorite.deal) %}
                                            {% set isFavorite = 'true' %}
                                        {% endif %}
                                    {% endfor %}
                                    <form method="post" action="{{ url('favorite_add') }}" class="js-favorite-add  float-right mr-2 mb-2" data-object="{{ oneFavorite.deal.id }}" data-type="deal" data-favorite="{{ isFavorite }}">
                                        <div class="flexbox">
                                            <div class="fav-btn">
                                                <span class="fas fa-heart  favme dashicons dashicons-heart  {% if isFavorite is same as ('true') %} {{'active'}} {% endif %}"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>