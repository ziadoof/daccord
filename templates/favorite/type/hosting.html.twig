<div class="row">
    <div class="col-md-12 px-2">
        <div id="meetup_index" class="meetup_index">
            <a href="{{ path('hosting_show', {'id': oneFavorite.hosting.id}) }}"class="">
                <div class="px-2 border-deal">
                    <div class="row">
                        <div class="col-md-3 my-1 image_meetup_index">
                            <img class="" src="/assets/images/favorite/hosting.jpg" alt="hosting image"/>
                        </div>
                        <div class="col-md-9 float-left py-2">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="">
                                        <h4 class="meetup-text rosed">Hosting</h4>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{{ 'Name : ' }}</span>{{ oneFavorite.hosting.user.firstname|title }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{{ 'City : ' }}</span>{{ oneFavorite.hosting.ville.name }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{{ 'Active : ' }}</span>
                                            <b class="deal-terminate">
                                                {% if oneFavorite.hosting.active %}
                                                    <img src="{{ asset('/assets/images/icons/yes.png') }}" alt="yes">
                                                {% else %}
                                                    <img src="{{ asset('/assets/images/icons/no.png') }}" alt="no">
                                                {% endif %}
                                            </b>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col ">
                                    {% set isFavorite = 'false' %}
                                    {#data-favorite must be string not boolean#}
                                    {% for favorite in app.user.getFavoritesByType('hosting')  %}
                                        {% if favorite.hosting is same as (oneFavorite.hosting) %}
                                            {% set isFavorite = 'true' %}
                                        {% endif %}
                                    {% endfor %}
                                    <form method="post" action="{{ url('favorite_add') }}" class="js-favorite-add  float-right mr-2 mb-2" data-object="{{ oneFavorite.hosting.id }}" data-type="hosting" data-favorite="{{ isFavorite }}">
                                        <div class="flexbox">
                                            <div class="fav-btn">
                                                <span class="fas fa-heart  favme dashicons dashicons-heart  {% if isFavorite is same as ('true') %} {{'active'}} {% endif %}"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>