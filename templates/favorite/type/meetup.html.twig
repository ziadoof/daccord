<div class="row">
    <div class="col-md-12 px-2">
        <div id="meetup_index" class="meetup_index">
            <a href="{{ path('meetup_show', {'id': oneFavorite.meetup.id}) }}"class="">
                <div class="px-2 border-deal">
                    <div class="row">
                        <div class="col-md-3 my-1 image_meetup_index">
                            <img class="" src="/assets/images/meetup/meetup.png" alt="meetup image"/>
                        </div>
                        <div class="col-md-9 float-left py-2">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="">
                                        <h4 class="meetup-text rosed">{{ oneFavorite.meetup.title }}</h4>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %} Type :{% endtrans %} </span>{{ oneFavorite.meetup.type|trans }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %} Start at :{% endtrans %}</span>{{ oneFavorite.meetup.startAt|date('d M Y - H:i') }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %} City : {% endtrans %}</span>{{ oneFavorite.meetup.city.name }}</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    {% if oneFavorite.meetup.isFinish() %}
                                        <div class="col">
                                            <span class="badge badge-danger float-right mt-2">{% trans %}Finish{% endtrans %}</span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col ">
                                    {% set isFavorite = 'false' %}
                                    {#data-favorite must be string not boolean#}
                                    {% for favorite in app.user.getFavoritesByType('meetup')  %}
                                        {% if favorite.meetup is same as (oneFavorite.meetup) %}
                                            {% set isFavorite = 'true' %}
                                        {% endif %}
                                    {% endfor %}
                                    <form method="post" action="{{ url('favorite_add') }}" class="js-favorite-add  float-right mr-2 mb-2" data-object="{{ oneFavorite.meetup.id }}" data-type="meetup" data-favorite="{{ isFavorite }}">
                                        <div class="flexbox">
                                            <div class="fav-btn">
                                                <span class="fas fa-heart  favme dashicons dashicons-heart  {% if isFavorite is same as ('true') %} {{'active'}} {% endif %}"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>