<div class="row">
    <div class="col-md-12 px-2">
        <div id="meetup_index" class="meetup_index">
            <a href="{{ path('ad_show', {'id': oneFavorite.ad.id}) }}"class="">
                <div class="px-2 border-deal">
                    <div class="row">
                        <div class="col-md-3 my-1 image_meetup_index">
                            <img class="" src="/assets/images/icons/{% if oneFavorite.ad.typeOfAd is same as('Offer')%}{{ 'offer.png' }}{% else %}{{ 'demand.png' }}{% endif %}" alt="ad image"/>
                        </div>
                        <div class="col-md-9 float-left py-2">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="">
                                        <h4 class="meetup-text rosed">{{ oneFavorite.ad.title }}</h4>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %}Type : {% endtrans %} </span>{{ oneFavorite.ad.typeOfAd|trans }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %}Category : {% endtrans %}</span>{{ oneFavorite.ad.category|trans }}</span>
                                    </div>
                                    <div class="">
                                        <span class=" mt-3"><span class="blued">{% trans %} City : {% endtrans %}</span>{% if oneFavorite.ad.city %}{{ oneFavorite.ad.city.name }}{% else %}{{ oneFavorite.ad.ville.name }}{% endif %}</span>
                                    </div>
                                    <div class="">
                                        {% if oneFavorite.ad.price %}
                                        <span class=" mt-3"><span class="blued">{% trans %} Price :{% endtrans %}</span>{{ oneFavorite.ad.price }} â‚¬</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col ">
                                    {% set isFavorite = 'false' %}
                                    {#data-favorite must be string not boolean#}
                                    {% for favorite in app.user.getFavoritesByType('ad')  %}
                                        {% if favorite.ad is same as (oneFavorite.ad) %}
                                            {% set isFavorite = 'true' %}
                                        {% endif %}
                                    {% endfor %}
                                    <form method="post" action="{{ url('favorite_add') }}" class="js-favorite-add  float-right mr-2 mb-2" data-object="{{ oneFavorite.ad.id }}" data-type="ad" data-favorite="{{ isFavorite }}">
                                        <div class="flexbox">
                                            <div class="fav-btn">
                                                <span class="fas fa-heart  favme dashicons dashicons-heart  {% if isFavorite is same as ('true') %} {{'active'}} {% endif %}"></span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>