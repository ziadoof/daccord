{% form_theme form 'bootstrap_3_layout.html.twig' %}
{{ form_start(form, {'method': 'post', 'action': path('new_meetup_vote', {'meetup': meetup.id, 'type':type}) }) }}
<div class="row">
    <div class="col-md-8 offset-2">
        <h4 class="title-blue text-center">Meetup Rating</h4>
        <div class="driver">
            <div class="row ">
                <div class=" deal-show  btn-group">
                    {{ form_row(form.value) }}
                </div>
            </div>
            <div class=" justify-content-center">
                {{ form_row(form.comment) }}
            </div>
            <button class="btn btn-info float-right">{{ button_label|default('Rating') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
