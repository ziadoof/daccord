{% extends "layout_visitor.html.twig" %}
{% block content %}
    <div class="container h-100 mt-5 pt-5">
        <div class="d-flex justify-content-center h-100 ">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="{{ asset('assets/images/profile/user-avatar.png') }}" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="justify-content-center form_container">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="white mt-3 text-center">{% trans %}Reset password{% endtrans %}</h5>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <div class=" justify-content-center">
                                <div class="">
                                    <div class="col-12 mt-3">
                                        <p class="mb-1"><i class="fas fa-dot-circle white"></i> <span>{% trans %}An email has been sent. It contains a link you must click to reset your password.{% endtrans %}</span></p>
                                        <br>
                                        <p class="mb-1"><i class="fas fa-dot-circle white"></i> {% trans %}Note: You can only request a new password once within{% endtrans %}{{ tokenLifetime }} {% trans %}hours.{% endtrans %}</p>
                                        <br>
                                        <p class="mb-1"><i class="fas fa-exclamation-triangle white"></i> {% trans %}If you don't get an email check your spam folder or try again.{% endtrans %}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="register-form my-4">
                    <div class="d-flex justify-content-center links">
                        <a href="/" class="ml-2 btn login_btn">{% trans %}Home page{% endtrans %}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}