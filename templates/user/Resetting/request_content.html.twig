{% extends "layout_visitor.html.twig" %}
{% block content %}
    {% block fos_user_content %}
        <div class="container h-100 mt-5 pt-5">
            <div class="d-flex justify-content-center h-100 ">
                <div class="user_card">
                    <div class="d-flex justify-content-center">
                        <div class="brand_logo_container">
                            <img src="{{ asset('assets/images/profile/user-avatar.png') }}" class="brand_logo" alt="Logo">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center form_container">
                        <form class="form-group formLogin" action="{{ path('fos_user_resetting_send_email') }}"
                              method="POST" class="fos_user_resetting_request">
                            <div class="my-4">
                                <label for="username">{% trans %}Your Email{% endtrans %} </label>
                                <input class="form-control" type="text" id="username" name="username" required="required"/>
                            </div>
                            <div class="row justify-content-center">
                                <div class="row">
                                    <div class="">
                                        <input class="btn login_btn" type="submit" value="{% trans %}Reset password{% endtrans %}"/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="register-form my-4">
                        <div class="d-flex justify-content-center links">
                            <a href="{{ path('user_registration') }}" class="ml-2 btn login_btn">{% trans %}Sign Up{% endtrans %}</a>
                            <a href="{{ path('security_login') }}" class="ml-2 btn login_btn">{% trans %}Sign In{% endtrans %}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock fos_user_content %}
{% endblock %}
