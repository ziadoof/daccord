{% extends "layout_user.html.twig" %}
{% block content %}
{% block fos_user_content %}
    <div class="mt-4">
        <ul class="nav nav-tabs nav-justified" id="user-edit" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#edit_personal" role="tab" aria-controls="profile" aria-selected="true">Personal information</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="driver-tab" data-toggle="tab" href="#edit_driver" role="tab" aria-controls="driver" aria-selected="false">Driver</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="area-tab" data-toggle="tab" href="#edit_area" role="tab" aria-controls="area" aria-selected="false">My area</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="hostingt-tab" data-toggle="tab" href="#edit_hosting" role="tab" aria-controls="hosting" aria-selected="false">Hosting</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="carpool-tab" data-toggle="tab" href="#edit_carpool" role="tab" aria-controls="carpool" aria-selected="false">Carpool</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="edit_personal" role="tabpanel" aria-labelledby="profile-tab">
                {% include "user/Profile/edit_content.html.twig" %}
            </div>
            <div class="tab-pane fade" id="edit_driver" role="tabpanel" aria-labelledby="driver-tab">
                {%  include'user/Profile/driver_edit_form.html.twig' %}
            </div>
            <div class="tab-pane fade" id="edit_area" role="tabpanel" aria-labelledby="area-tab">
                {%  include'user/Profile/edit_area.html.twig' %}
            </div>
            <div class="tab-pane fade" id="edit_hosting" role="tabpanel" aria-labelledby="hosting-tab">
                {%  include'user/Profile/hosting_edit_form.html.twig' %}
            </div>
            <div class="tab-pane fade" id="edit_carpool" role="tabpanel" aria-labelledby="carpool-tab">
                {%  include'user/Profile/carpool_edit_form.html.twig' %}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
{% endblock  content%}
