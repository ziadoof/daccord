<div class="fos_user_user_show  px-4 py-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-12 text-center">
            <div class=" px-4 ">
                <h6 class="text-center pt-0 title-blue">{% trans %}Your current area{% endtrans %}</h6>
                {% if app.user.ville != null %}
                    <h5 class="text-center pt-0 title-rose">{{ app.user.ville }}</h5>
                    <h2 class="text-center pt-0 ">{{ app.user.postalCode }}</h2>
                {% else %}
                    <h5 class="text-center pt-0 title-rose">{% trans %}You did not choose a city{% endtrans %}</h5>
                {% endif %}
            </div>
            <div class="area-map" {#style="width: 700px;position: relative;"#}>
                <iframe  src="https://maps.google.com/maps?width=auto&amp;height=440&amp;hl=en&amp;q={{app.user.mapY}},{{app.user.mapX}}
                        &amp;ie=UTF8&amp;t=&amp;z=13&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                </iframe>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">

            <br />
        </div>
    </div>
</div>
