{% block content %}
    {% if app.user.driver %}
    <div class="fos_user_user_show px-4 py-4">
        <div class="row">
            <div class="col-md-2 offset-5 btn-group ">
                <div class=" profile-edit ml-2" id="without-pointer">
                    <a class="">
                        {% if app.user.driver.carImage %}
                            {% if app.user.driver.carImage is same as ('with out photo') %}
                                <img class="mb-3 {% if user.driver.active %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}"
                                     src="{{ asset('/assets/images/car_driver/driver-avatar.png') }}" alt="User">
                            {% else %}
                                <img class="mb-3 {% if user.driver.active %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}"
                                     src="{{ asset('/assets/images/car_driver/'~app.user.driver.carImage) }}" alt="User" >
                            {% endif %}
                        {% else %}
                            <img class="mb-3 {% if user.driver.active %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}"
                                 src="{{ asset('/assets/images/car_driver/driver-avatar.png') }}" alt="User">
                        {% endif %}
                    </a>
                </div>
            </div>
        </div>
        <div class="justify-content-center">
            <h3 class="text-center pt-3">{{ user.firstname|title }} {{ user.lastname|upper }}</h3>
            <h3 class="pt-3 bdg-accord ">{{ user.driver.point }} <span>Points</span></h3>
        </div>
        <div class="justify-content-center">
            <div class="text-center pt-2">
                <h6 class="d-inline font-weight-bold">{% trans %}Active : {% endtrans %} </h6>
                <b class="deal-terminate">
                    {% if app.user.driver.active %}
                        <img src="{{ asset('/assets/images/icons/yes.png') }}" alt="yes">
                    {% else %}
                        <img src="{{ asset('/assets/images/icons/no.png') }}" alt="no">
                    {% endif %}</b>
                <div class="col">
                    <h6 class="d-inline font-weight-bold">{% trans %}Car brand :{% endtrans %}  </h6><span>  {{ user.driver.carBrand }}</span>
                </div>
                <div class="col">
                    <h6 class="d-inline font-weight-bold">{% trans %}Car color :{% endtrans %}  </h6><span>  {{ user.driver.carColor }}</span>
                </div>
                <div class="col ">
                    <h6 class="d-inline font-weight-bold">{% trans %}City  : {% endtrans %} </h6><span>  {{ user.driver.city}}</span>
                </div>
                <div class="col">
                    <h6 class="d-inline font-weight-bold"> {% trans %}Max distance:  {% endtrans %}</h6><span>  {{ user.driver.maxDistance }} <span class="font-weight-bold">Km</span></span>
                </div>
            </div>
        </div>
        {# render rating of driver#}
        {{ render(controller('App\\Controller\\User\\ProfileController::ratingDriver',{ 'user': user })) }}
    </div>
    {% else %}
    <div class="col-xl-6 offset-xl-3 col-md-8 offset-md-2 col-12 mt-5">
        <div class="row border-driver">
            <div class="col my-2 mx-2 text-center text-center">
                <h4 class="title-blue my-1 mx-1">{% trans %}Be a driver in simple steps{% endtrans %}</h4>
                <p>{% trans %}Registering yourself as a driver enables you to see the deals taking place in your area and you can also receive notifications of potential deals and your profile is displayed as a potential driver within these deals. If one of the parties wishes to transfer his purchases through you, you will receive a notification and you will be able to talk to the owner of the transaction.At any moment you can stop or reset your account as a driver{% endtrans %}</p>
            </div>
        </div>
        <div class="row text-center mt-2">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-info btn-block">{% trans %}Be a driver{% endtrans %}</a>
        </div>
    </div>
    {% endif %}
{% endblock %}

