{% trans_default_domain 'FOSUserBundle' %}
{% block content %}
    {% if app.user.carpool %}
    <div class="fos_user_user_show px-4 py-4">
        <div class="row">
            <div class="col-md-4 offset-4 btn-group ">
                <div class=" carpool-edit ml-2  ">
                        <img class="mb-3 " src="{{ app.user.carpool.photoCarpool() }}" alt="User">
                </div>
            </div>
        </div>
        <div class="justify-content-center">
            <h1 class="text-center pt-3">{{ user.firstname|title }} {{ user.lastname|upper }}</h1>
            <h1 class="pt-3 bdg-accord ">{{ user.carpool.point }} <span>Points</span></h1>
        </div>
        <div class="justify-content-center">
            <div class="text-center pt-2">
                <div class="col">
                    <h6 class="d-inline font-weight-bold">Car brand :  </h6><span>  {{ app.user.carpool.carBrand }}</span>
                </div>
                <div class="col">
                    <h6 class="d-inline font-weight-bold">Car color :  </h6><span>  {{ app.user.carpool.carColor }}</span>
                </div>
                <div class="col ">
                    <h6 class="d-inline font-weight-bold">Number of passengers  :  </h6><span>  {{ app.user.carpool.numberOfPassengers}}</span>
                </div>
                <h6 class="text-center rosed mt-4">Possibility to</h6>
                <div class="col">
                    {% if app.user.carpool.bag %}
                        <span class="badge badge-info py-2 px-2 mr-1">Bag</span>
                    {% endif %}
                    {% if app.user.carpool.animal %}
                        <span class="badge badge-info py-2 px-2 mr-1">Animal</span>
                    {% endif %}
                    {% if app.user.carpool.baby %}
                        <span class="badge badge-info py-2 px-2 mr-1">Baby</span>
                    {% endif %}
                    {% if app.user.carpool.bankCard %}
                        <span class="badge badge-info py-2 px-2 mr-1">bank card</span>
                    {% endif %}
                </div>
                <h6 class="text-center rosed mt-4">I can share</h6>
                <div class="col">
                    {% if app.user.carpool.conversation %}
                        <span class="badge badge-warning py-2 px-2 mr-1">Conversation</span>
                    {% endif %}
                    {% if app.user.carpool.music %}
                        <span class="badge badge-warning py-2 px-2 mr-1">Music</span>
                    {% endif %}
                </div>
            </div>
        </div>
        {# render rating of driver#}
        {{ render(controller('App\\Controller\\User\\ProfileController::ratingCarpool',{ 'user': app.user })) }}
    </div>
    {% else %}
    <div class="col-md-4 offset-4 mt-5">
        <div class="row border-driver">
            <div class="col my-4 mx-2 text-center">
                <h4 class="title-blue my-1 mx-1">Share your car in simple steps</h4>
                <p>Registering yourself with the Carpool service will allow you to share your car
                    with other people to get them to your same destination
                    You can get subscribers if your prices are competitive</p>
            </div>
        </div>
        <div class="row text-center ">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-info btn-block">Share your car</a>
        </div>
    </div>
    {% endif %}
{% endblock %}

