{% extends "layout_user.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block content %}
{% block fos_user_content %}
    <div class="container pt-lg-5 pt-3">
        <div class="row mb-md-3 mb-lg-3">
            <div class="col-12">
                <h1 class="welcome-text mt-3">Bienvenue sur On a d'accord..</h1>
            </div>
        </div>
        <hr>
        <div class="row justify-content-center formLogin mt-4">
            <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}
            <div class="col-12">
            {% if targetUrl %}
            <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
{% endblock %}
