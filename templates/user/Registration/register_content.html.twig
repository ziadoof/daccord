{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('user_registration') }) }}
<div class=" pt-lg-5 pt-3">
    <div class="row">
        <div class=" pt-0">
            <div class="">
                <div class="col-md-10 offset-1">
                    <div class="col-md-10 offset-1">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-10 offset-1 ">
                        {{ form_row(form.plainPassword) }}
                    </div>
                    <button type="submit" class="btn btn-info col-md-10 offset-1 mt-4">S'inscrire !</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
