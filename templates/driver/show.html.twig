{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Driver</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>CarBrand</th>
                <td>{{ driver.carBrand }}</td>
            </tr>
            <tr>
                <th>CarColor</th>
                <td>{{ driver.carColor }}</td>
            </tr>
            <tr>
                <th>CarImage</th>
                <td>{{ driver.carImage }}</td>
            </tr>
            <tr>
                <th>MaxDistance</th>
                <td>{{ driver.maxDistance }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ driver.point }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ driver.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>GpsLat</th>
                <td>{{ driver.gpsLat }}</td>
            </tr>
            <tr>
                <th>GpsLng</th>
                <td>{{ driver.gpsLng }}</td>
            </tr>
            <tr>
                <th>Feedback</th>
                <td>{{ driver.feedback }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('driver_index') }}">back to list</a>

    <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
