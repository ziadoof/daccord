{{ form_start(form,{'attr':{'id':'meetup-form-new'}}) }}
<div class="px-3 py-3" id="meetup-form">
    <div class="row">
        <div class="local-border col-lg-10 offset-lg-1 py-2 px-2">
            <div class="row" >
                <div class="col-lg-6 px-2 py-2 meetup-form-group">
                    <div class="row">
                        <div class="col-12 ">
                            {{ form_row(form.image,{'attr':{'class':'text-center'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 meetup-form-group">
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.type) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.maxParticipants) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.startAt) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.endAt) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.place) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}

                </div>
            </div>
            <div class="row">
                <div class="col float-right">
                    <button class="btn btn-info float-right mb-2 mr-2">{% trans %}Create{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}




