{% extends 'base.html.twig' %}

{% block title %}Regions index{% endblock %}

{% block body %}
    <h1>Regions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.name }}</td>
                <td>{{ region.slug }}</td>
                {#<td>{{ region.code }}</td>#}
                <td>
                    <a href="{{ path('regions_show', {'id': region.id}) }}">show</a>
                    <a href="{{ path('regions_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('regions_new') }}">Create new</a>
{% endblock %}
