{% extends "layout_user.html.twig" %}

{% block title %}Deal{% endblock %}

{% block content %}
    <div class="">
        <div class="row">
            <div class="col mx-4">
                <div class="deal-show ">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 ad-slide border-deal">
                            <div class="row">
                                <div class="col-12 my-2">
                                    <h5 class="blued d-inline pt-1 font-weight-bold">{% if deal.category.name is same as('Other') %}{{ deal.offer.subjectName }}{% else %}{{ deal.category|trans}}{% endif %}</h5>
                                    {% if app.user %}
                                        {% set isFavorite = 'false' %}
                                        {#data-favorite must be string not boolean#}
                                        {% for favorite in app.user.getFavoritesByType('deal')  %}
                                            {% if favorite.deal is same as (deal) %}
                                                {% set isFavorite = 'true' %}
                                            {% endif %}
                                        {% endfor %}
                                        <form method="post" action="{{ url('favorite_add') }}" class="js-favorite-add float-right" data-object="{{ deal.id }}" data-type="deal" data-favorite="{{ isFavorite }}">
                                            <div class="flexbox">
                                                <div class="fav-btn">
                                                    <span class="fas fa-heart  favme dashicons dashicons-heart  {% if isFavorite is same as ('true') %} {{'active'}} {% endif %}"></span>
                                                </div>
                                            </div>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-lg-8 offset-lg-2 pt-2 border-deal">
                            <div class="row">
                                <div class="col-12">
                                    <div class="btn-group driver deal-show float-none text-center">
                                        <div class="px-2 py-2  ">
                                            {% if deal.offerUser.id is same as(app.user.id) %}
                                                <div class=" d-block text-center">
                                                    <a class="d-block" href="{{ path('user_show', {'id': deal.offerUser.id}) }}">
                                                        <img  src="{{ asset( deal.offerUser.photoProfile()) }}" alt="offerUser" class="float-right">
                                                    </a>
                                                    <b class="d-block ">{{ deal.offerUser.firstname }}</b>
                                                    <b class="d-block ">{{ deal.offerUser.city.name }}</b>
                                                </div>
                                            {% else %}
                                                <div class="d-block text-center">
                                                    <a href="{{ path('user_show', {'id': deal.demandUser.id}) }}">
                                                        <img  src="{{ asset( deal.demandUser.photoProfile()) }}" class="float-right">
                                                    </a>
                                                    <b class="d-block">{{ deal.demandUser.firstname }}</b>
                                                    <b class="d-block">{{ deal.demandUser.city.name }}</b>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="mt-3 text-center">
                                            <i class="fas fa-handshake deal-show-photo mt-0"></i><br>
