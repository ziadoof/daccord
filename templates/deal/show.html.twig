{% extends "layout_user.html.twig" %}

{% block title %}Deal{% endblock %}

{% block content %}
    <div class="">
        <div class="deal-show ">
            <div class="row col-md-8 offset-2 pt-2 border-deal">
                <div class="btn-group driver deal-show ">
                    <a class="text-center mx-4 px-2 py-2  ">
                        {% if deal.offerUser.id is same as(app.user.id) %}
                            {% if deal.offerUser.profileImage  %}
                                <img src="{{ asset('/assets/images/profile/'~deal.offerUser.profileImage) }}" class="float-right" ><br>
                            {% else %}
                                <img  src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="offerUser" class="float-right"><br>
                            {% endif %}
                            <b class="">{{ deal.offerUser.firstname }}</b><br>
                            <b class="">{{ deal.offerUser.city }}</b>
                        {% else %}
                            {% if deal.demandUser.profileImage  %}
                                <img src="{{ asset('/assets/images/profile/'~deal.demandUser.profileImage) }}" class="float-right" ><br>
                            {% else %}
                                <img  src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="offerUser" class="float-right"><br>
                            {% endif %}
                                <b class="">{{ deal.demandUser.firstname }}</b><br>
                                <b class="">{{ deal.demandUser.city }}</b>
                        {% endif %}
                    </a>
                    <a class="mt-3 mx-3 text-center">
                        <i class="fas fa-handshake deal-show-photo mt-0"></i><br>
                        <b class="title-rose ">{% if deal.category.name is same as('Other') %}{{ deal.offer.subjectName }}{% else %}{{ deal.category}}{% endif %}</b>
                        {% if deal.driverUser %}
                            <div class="row ">
                                <div class="deal-show col-md-12 ">
                                    <div class="mb-2">
                                        {% if deal.driverUser.profileImage  %}
                                            <img src="{{ asset('/assets/images/profile/'~deal.driverUser.profileImage) }}" ><br>
                                        {% else %}
                                            <img  src="{{ asset('/assets/images/profile/avatar.jpeg') }}"  ><br>
                                        {% endif %}
                                        <i class="fas fa-truck-moving button-left" title="Driver request"></i>
                                        {{ deal.driverUser.firstname }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </a>
                    <a class="text-center mx-4 px-2 py-2  ">
                        {% if deal.offerUser.id is not same as(app.user.id) %}
                            {% if deal.offerUser.profileImage  %}
                                <img src="{{ asset('/assets/images/profile/'~deal.offerUser.profileImage) }}" class="" ><br>
                            {% else %}
                                <img  src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="offerUser" class=""><br>
                            {% endif %}
                                <b class="">{{ deal.offerUser.firstname }}</b><br>
                                <b class="">{{ deal.offerUser.city }}</b>
                        {% else %}
                            {% if deal.demandUser.profileImage  %}
                                <img src="{{ asset('/assets/images/profile/'~deal.demandUser.profileImage) }}"  ><br>
                            {% else %}
                                <img  src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="offerUser" ><br>
                            {% endif %}
                                <b class="">{{ deal.demandUser.firstname }}</b><br>
                                <b class="">{{ deal.demandUser.city }}</b>
                        {% endif %}
                    </a>
                </div>
            </div>
            {% if deal.offerUser is same as (app.user) and deal.demandUserStatus %}
                <div class="justify-content-center my-0">
                    <p class="text-center rosed">
                        <span class="blued">{{ deal.demandUser.firstname|title  }}
                            {% if deal.driverStatus %}
                                and {{ deal.driverUser.firstname|title  }}
                            {% endif %}
                        </span> ended the deal. </p>
                </div>
            {% elseif deal.demandUser is same as (app.user) and deal.offerUserStatus %}
                <div class="justify-content-center my-0">
                    <p class="text-center rosed">
                        <span class="blued">{{ deal.offerUser.firstname|title  }}
                            {% if deal.driverStatus %}
                            and {{ deal.driverUser.firstname|title  }}
                            {% endif %}
                        </span> ended the deal. </p>
                </div>
            {% elseif deal.driverStatus %}
            <div class="justify-content-center my-0">
                <p class="text-center rosed">
                <span class="blued">{{ deal.driverUser.firstname|title }}</span> ended the deal. </p>
            </div>
            {% endif %}
            <div class= "row ">
                <div class="deal-show col-md-12 py-1 ">
                    <div class="row">
                        <div class="col-md-8 offset-2">
                            <table class="table table-striped border-deal  ">
                                <thead>
                                <tr>
                                    <th scope="col">Specification</th>
                                    <th scope="col">
                                        {% if deal.offerUser.id is same as(app.user.id) %}
                                        Your offer
                                        {% else %}
                                        Your demand
                                        {% endif %}
                                    </th>
                                    <th scope="col">
                                        {% if deal.demandUser.id is same as(app.user.id) %}
                                            {{ deal.offerUser.firstname }}{{ ' offer '}}
                                        {% else %}
                                            {{ deal.demandUser.firstname }}{{ ' demand '}}
                                        {% endif %}
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for key, value in specification %}
                                    {% if deal.offerUser.id is same as(app.user.id) %}
                                        {% if key is same as ('Date Of Event')  %}
                                            <tr>
                                                <th scope="row">{{ key  }}</th>
                                                <td>{{ value['offer']|date("m/d/Y") }}</td>
                                                <td>{{ value['demand'] }}</td>
                                            </tr>
                                        {% elseif key is same as ('Languages')  %}
                                            <tr>
                                                <th scope="row">{{ key }}</th>
                                                <td>
                                                    {% for cont in value['offer'] %}
                                                        {#for show - befor all languages without the first#}
                                                        {% if cont is same as(value['offer'][0]) %}
                                                            {{cont}}
                                                        {% else %}
                                                            {{ ' - ' }}{{cont}}
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    {% for cont in value['demand'] %}
                                                        {#for show - befor all languages without the first#}
                                                        {% if cont is same as(value['demand'][0]) %}
                                                            {{cont}}
                                                        {% else %}
                                                            {{ ' - ' }}{{cont}}
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr class="{#{% if value['offer'] is same as(value['demand'])  %}{{ 'bg-success' }}{% endif %}#}">
                                                <th scope="row">{{ key }}</th>
                                                <td>{{ value['offer'] }}</td>
                                                <td>{{ value['demand'] }}</td>
                                            </tr>
                                        {% endif %}
                                    {% else %}
                                        {% if key is same as ('Date Of Event')  %}
                                            <tr>
                                                <th scope="row">{{ key  }}</th>
                                                <td>{{ value['demand'] }}</td>
                                                <td>{{ value['offer']|date("m/d/Y") }}</td>
                                            </tr>
                                        {% elseif key is same as ('Languages')  %}
                                            <tr>
                                                <th scope="row">{{ key }}</th>
                                                <td>
                                                    {% for cont in value['demand'] %}
                                                        {#for show - befor all languages without the first#}
                                                        {% if cont is same as(value['demand'][0]) %}
                                                            {{cont}}
                                                        {% else %}
                                                            {{ ' - ' }}{{cont}}
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    {% for cont in value['offer'] %}
                                                        {#for show - befor all languages without the first#}
                                                        {% if cont is same as(value['offer'][0]) %}
                                                            {{cont}}
                                                        {% else %}
                                                            {{ ' - ' }}{{cont}}
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr class="{#{% if value['offer'] is same as(value['demand'])  %}{{ 'bg-success' }}{% endif %}#}">
                                                <th scope="row">{{ key }}</th>
                                                <td>{{ value['demand'] }}</td>
                                                <td>{{ value['offer'] }}</td>
                                            </tr>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="">
                        <div class= "col-md-8 offset-2 border-deal ">
                            <div class="deal-show row">
                                <div class="btn-group">
                                    {% if deal.offerUser.id is same as(app.user.id) %}
                                        <form >
                                            <a class="btn btn-info mx-1" href="{{ path('ad_show', {'id': deal.offer.id}) }}">
                                                <img  src="{{ asset('/assets/images/icons/offer.png') }}" alt="offerUser" class="">
                                                <p class="mt-2">Your offer</p>
                                            </a>
                                        </form>
                                    {% else %}
                                        <form >
                                            <a class="btn btn-info mx-1" href="{{ path('ad_show', {'id': deal.demand.id}) }}">
                                                <img  src="{{ asset('/assets/images/icons/demand.jpg') }}" alt="offerUser" class="">
                                                <p class="mt-1">Your demand</p>
                                            </a>
                                        </form>
                                    {% endif %}
                                    {% if deal.offerUser.id is same as(app.user.id) %}
                                        <form>
                                            <a class="btn btn-info mx-1" href="{{ path('ad_show', {'id': deal.demand.id}) }}">
                                                <img  src="{{ asset('/assets/images/icons/demand.jpg') }}" alt="offerUser" class="">
                                                <p class="mt-1"> {{deal.demandUser.firstname}} demand </p>
                                            </a>
                                        </form>
                                    {% else %}
                                        <form>
                                            <a class="btn btn-info mx-1" href="{{ path('ad_show', {'id': deal.offer.id}) }}">
                                                <img  src="{{ asset('/assets/images/icons/offer.png') }}" alt="offerUser" class="">
                                                <p class="mt-1"> {{deal.offerUser.firstname}} offer </p>
                                            </a>
                                        </form>
                                    {% endif %}
                                    {% if deal.offerUser.id is same as(app.user.id) %}
                                        <form>
                                            <a class="btn btn-info mx-1" href="{{ path('user_show', {'id': deal.demandUser.id}) }}">
                                                <img  src="{{ asset('/assets/images/profile/'~deal.demandUser.profileImage) }}" alt="offerUser" class="">
                                                <p class="mt-1">{{deal.demandUser.firstname}} profile</p>
                                            </a>
                                        </form>
                                    {% else %}
                                        <form>
                                            <a class="btn btn-info mx-1" href="{{ path('user_show', {'id': deal.offerUser.id}) }}">
                                                <img  src="{{ asset('/assets/images/profile/'~deal.offerUser.profileImage) }}" alt="offerUser" class="">
                                                <p class="mt-1">{{deal.offerUser.firstname}} profile</p>
                                            </a>
                                        </form>
                                    {% endif %}
                                    {% if deal.offerUser.id is same as(app.user.id) %}
                                        <form method="post" action="{{ url('new_conversation') }}"id="demandUser-message">
                                            <button class="btn btn-info mx-1" >
                                                <input type="hidden" name="user" value="{{ deal.demandUser.id }}">
                                                <img  src="{{ asset('/assets/images/icons/message.png') }}" alt="message" class="">
                                                <p class="mt-1">Message to {{deal.demandUser.firstname}}</p>
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="post" action="{{ url('new_conversation') }}" id="offerUser-message">
                                            <button class="btn btn-info mx-1" >
                                                <input type="hidden" name="user" value="{{ deal.offerUser.id }}">
                                                <img  src="{{ asset('/assets/images/icons/message.png') }}" alt="message" class="">
                                                <p class="mt-1">Message to {{deal.offerUser.firstname}}</p>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form >
                                        <button class="btn btn-info mx-1" href="#">
                                            <img  src="{{ asset('/assets/images/icons/report.png') }}" alt="report" class="">
                                            <p class="mt-1">Report the deal</p>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('deal_done', {'id': deal.id}) }}" onsubmit="return confirm('Are you sure you want to finish this Deal?');">
                                        <button class="btn btn-info mx-1">
                                            <img  src="{{ asset('/assets/images/icons/dealdone.png') }}" alt="dealdone" >
                                            <p class="mt-1">Deal done</p>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('deal_delete', {'id': deal.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Deal?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ deal.id) }}">
                                        <button class="btn btn-info mx-1">
                                            <img  src="{{ asset('/assets/images/icons/cancel.jpg') }}" alt="cancel" class="">
                                            <p class="mt-1">Cancel the deal</p>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" driver-request">
                        <div class="col-md-8 offset-2  ">
                            <div class="deal-show row py-1 ">
                                {% for driverRequest in  deal.driverRequests() %}
                                    {% if driverRequest.user is same as (app.user) %}
                                    <div class="border-deal {{ driverRequest.status }}">
                                        <div class="row pt-2 mx-4 pb-0">
                                            <div class="col-md-4">
                                                <h5>Requested at : {{ driverRequest.date|date("m/d/Y") }}</h5>
                                            </div>
                                            <div class="col-md-2 offset-6 ">
                                                <div class="float-right btn-group">
                                                    {% if driverRequest.status is same as ('accepted') %}
                                                    <form method="post" action="{{ path('driver_request_add', {'driverRequest': driverRequest.id,'deal':deal.id}) }}"
                                                          onsubmit="return confirm('NOTE : If you add this driver to the deal\n'+
                                                            'All the driver requests will be canceled before adding\n' +
                                                             'Are you sure you want to add this driver to your deal?');">
                                                        <button class="btn btn-success" href="">Add driver to deal</button>
                                                    </form>
                                                    {% endif %}
                                                    <form method="post" action="{{ path('driver_request_delete', {'id': driverRequest.id,'deal':deal.id}) }}" onsubmit="return confirm('Are you sure you want to delete this request?');">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ driverRequest.id) }}">
                                                        <button class="btn btn-danger ml-2" href="">Cancel the request</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-1">
                                        <div class="row ">
                                            <div class="col-md-2 px-4 pb-2">
                                                <a href="{{ path('driver_show',{'id': driverRequest.driver.id}) }}">
                                                    {% if driverRequest.driver.user.profileImage %}
                                                        <img class="mb-3 {% if driverRequest.driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/'~driverRequest.driver.user.profileImage) }}" alt="User" >
                                                    {% else %}
                                                        <img class="mb-3 {% if driverRequest.driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="User">
                                                    {% endif %}
                                                </a>
                                            </div>
                                            <div class="col-md-7 pt-2">
                                                <b>{{ 'Driver : ' }}{{ driverRequest.driver.user.firstname }} {{ driverRequest.driver.user.lastname }}</b><br>
                                                <b>{{ 'Car brand : ' }}{{ driverRequest.driver.carBrand }} </b><br>
                                                <b>{{ 'City : ' }}{{ driverRequest.driver.city }}</b>
                                            </div>
                                            <div class="col-md-3 text-center">
                                               <p>Request status</p>
                                                <div class="bdg-serenite mb-2">
                                                    <h3>{{ driverRequest.status|upper }}</h3>
                                                    {% if  driverRequest.price %}
                                                    <span class="">Suggested price : <span class="title-blue">{{ driverRequest.price }}</span>{{ ' €' }}</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% else %}
                                        <div class="border-deal {{ driverRequest.status }}">
                                            <div class="row pt-2 mx-4 pb-0">
                                                <div class="col">
                                                    <h5><span class="title-blue">{{ driverRequest.user.firstname }} </span> had made a driver's request at : {{ driverRequest.date|date("m/d/Y") }}</h5>
                                                </div>
                                            </div>
                                            <hr class="my-1">
                                            <div class="row ">
                                                <div class="col-md-2 px-4 pb-2">
                                                    <img  src="{{ asset('/assets/images/profile/'~driverRequest.driver.user.profileImage) }}" alt="offerUser" class="">
                                                </div>
                                                <div class="col-md-7 pt-2">
                                                    <b>{{ 'Driver : ' }}{{ driverRequest.driver.user.firstname }} {{ driverRequest.driver.user.lastname }}</b><br>
                                                    <b>{{ 'Car brand : ' }}{{ driverRequest.driver.carBrand }} </b><br>
                                                    <b>{{ 'City : ' }}{{ driverRequest.driver.city }}</b>
                                                </div>
                                                <div class="col-md-3 text-center">
                                                    <p>Request status</p>
                                                    <div class="bdg-serenite mb-2">
                                                        <h3>{{ driverRequest.status|upper }}</h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% if deal.demandUser is same as (app.user)  %}
                    {% if drivers is not same as (null)  %}
                        <div class="">
                            <div class= "col-md-8 offset-2  ">
                                <div class="deal-show row py-1 ">
                                    <div class="btn-group driver ">
                                        {% if drivers is not empty %}
                                            {% for driver in drivers %}
                                                <div class="text-center mx-2 px-2 py-2 border-deal ">
                                                    <a href="{{ path('driver_show',{'id': driver.id}) }}">
                                                        {% if driver.user.profileImage %}
                                                            <img class="mb-3 {% if driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/'~driver.user.profileImage) }}" alt="User" >
                                                        {% else %}
                                                            <img class="mb-3 {% if driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/avatar.jpeg') }}" alt="User">
                                                        {% endif %}
                                                    </a>
                                                    <p class="mt-1">{{driver.user.firstname}}</p>
                                                    <p class="mt-1">{{ driver.point }}{{ ' Points' }}</p>
                                                    <p class="mt-1">{{ driver.feedback }}</p>
                                                    <form method="post" action="{{ url('new_conversation') }}" id="offerUser-message">
                                                        <button class="btn btn-info mx-1" >
                                                            <input type="hidden" name="user" value="{{ driver.user.id }}">
                                                            <p class="mt-1">Message to {{driver.user.firstname}}</p>
                                                        </button>
                                                    </form>
                                                    <button id="driver_request_js" data-toggle="modal" class="btn btn-info my-1 btn-block"
                                                            data-target="#driverRequest-{{ driver.id }}"
                                                            {% if deal.driverUser %}
                                                                disabled
                                                            {% endif %}>
                                                        Driver request
                                                    </button>
                                                </div>
                                            {% endfor %}
                                        {% else %}
                                            <div class="col-md-12">
                                                <div class="border-deal px-4">
                                                    <a class="text-center  px-2">
                                                        <h2>There is no Drivers in this area</h2>
                                                    </a>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- modal start-->
    {% for driver in drivers %}
    <div class="modal fade bd-example-modal-lg mt-4" id="driverRequest-{{ driver.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="z-index: 9999;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                        {{ render(controller('App\\Controller\\DriverRequestController::new',{ 'driver': driver.id , 'deal':deal.id })) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    <!-- modal end-->
{% endblock %}
