                                                    {% if driverRequest.status is same as ('accepted') %}
                                                        <form method="post" action="{{ path('driver_request_add', {'driverRequest': driverRequest.id,'deal':deal.id}) }}"
                                                              onsubmit="return confirm(Translator.trans('NOTE : If you add this driver to the deal')+'\n'+
                                                        Translator.trans('All the driver requests will be canceled before adding')+'\n' +
                                                         Translator.trans('Are you sure you want to add this driver to your deal?'));">
                                                            <button class="btn btn-success mt-2 ml-md-2 btn-block" href=""><i class="fas fa-plus-circle"></i> {% trans %} Add driver to deal{% endtrans %}</button>
                                                        </form>
                                                    {% endif %}
                                                    <form method="post" action="{{ path('driver_request_delete', {'id': driverRequest.id,'deal':deal.id}) }}" onsubmit="return confirm(Translator.trans('Are you sure you want to delete this request?'));">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ driverRequest.id) }}">
                                                        <button class="btn btn-danger mt-2 ml-md-2 btn-block" href=""><i class="fas fa-window-close"></i> {% trans %} Cancel the request{% endtrans %}</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="row">
                                <div class="col-lg-8 offset-lg-2 border-deal">
                                    <div class="driver-request">
                                        <div class="row {{ driverRequest.status }} py-2 border-bottom ">
                                            <div class="col text-center ">
                                                <span>{% trans %} Request status{% endtrans %}
                                                    <span class="d-inline font-weight-bold {% if driverRequest.status is same as ('accepted') %} white {% else %} blued {% endif %}">
                                                        {{ driverRequest.status|upper }}
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row py-2">
                                            <div class="col-md-6 col-12 mt-2 float-md-left">
                                                <div class="text-center btn-md-group">
                                                    <div class="d-inline">
                                                        <a href="{{ path('driver_show',{'id': driverRequest.driver.id}) }}">
                                                            {% if driverRequest.driver.user.profileImage %}
                                                                <img class="mb-3 {% if driverRequest.driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/'~driverRequest.driver.user.profileImage) }}" alt="User" >
                                                            {% else %}
                                                                <img class="mb-3 {% if driverRequest.driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/user-avatar.png') }}" alt="User">
                                                            {% endif %}
                                                        </a>
                                                    </div>
                                                    <div class="d-inline pl-2 pt-2">
                                                        <h6 class="blued font-weight-bold">{% trans %} Driver : {% endtrans %}<span class="grayed"> {{ driverRequest.driver.user.firstname }} {{ driverRequest.driver.user.lastname }}</span></h6>
                                                        <h6 class="blued font-weight-bold">{% trans %} Car brand : {% endtrans %}<span class="grayed"> {{ driverRequest.driver.carBrand }} </span></h6>
                                                        <h6 class="blued font-weight-bold">{% trans %} City : {% endtrans %}<span class="grayed"> {{ driverRequest.driver.city }}</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12 mt-3 pt-5 ">
                                                <div class="float-md-right text-center">
                                                    <span class="grayed"><span class="title-blue">{{ driverRequest.user.firstname }} </span> {% trans %}had made a driver's request at :  {% endtrans %} {{ driverRequest.date|date("m/d/Y") }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    {% if deal.demandUser is same as (app.user)  %}
                        {% if drivers is not same as (null)  %}
                            <div class="row">
                                <div class="col-lg-8 offset-lg-2 border-driver">
                                    {% if drivers is not empty %}
                                    <h5 class="blued text-center my-2 font-weight-bold">{% trans %}DRIVERS{% endtrans %}</h5>
                                        <div class="row">
                                            {% for driver in drivers %}
                                                <div class="col-xl-6 col-lg-12 col-sm-6 col-12 mb-1">
                                                    <div class="local-border my-1 mx-1">
                                                        <div class="row mx-1 my-2">
                                                            <div class="col-4 py-2 pl-2">
                                                                <a href="{{ path('driver_show',{'id': driver.id}) }}">
                                                                    {% if driver.user.profileImage %}
                                                                        <img class="{% if driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/'~driver.user.profileImage) }}" alt="User" >
                                                                    {% else %}
                                                                        <img class="{% if driver.user.isActiveNow %}{{ 'online-status' }}{% else %}{{ 'offline-status' }}{% endif %}" src="{{ asset('/assets/images/profile/user-avatar.png') }}" alt="User">
                                                                    {% endif %}
                                                                </a>
                                                            </div>
                                                            <div class="col-4 text-center">
                                                                <h6 class="blued font-weight-bold">{{driver.user.firstname}}</h6>
                                                                <h6 class="rosed">{{ driver.point }}{{ ' Points' }}</h6>
                                                                <div class="text-center driver-rating-deal">
                                                                    {% if driverRating[driver.id] is not same as(null) %}
                                                                        {% set range = driverRating[driver.id].total/driverRating[driver.id].numVotes %}
                                                                        {% set total = range|round(2, 'ceil')  %}
                                                                        {% set ceil = total|round(0,('ceil'))  %}
                                                                        {% set floor = total|round(0,('floor'))  %}
                                                                        {% set def =  ceil-floor %}
                                                                        {% set reste = 5 - total %}
                                                                        {% set roundReste = reste|round(0,('floor')) %}
                                                                        <div class="row justify-content-center">
                                                                            <span class="float-right blued">
                                                                                {% if  total is not same as(null) and total <=5%}{#rating is not null#}
                                                                                    {% if  def %} #}{# rating is floot#}
                                                                                        {% if floor %}
                                                                                            {% for  i in floor ..1%}
                                                                                                <i class="fas fa-star"></i>
                                                                                            {% endfor %}
                                                                                        {% endif %}
                                                                                        <i class="fas fa-star-half-alt"></i>
                                                                                        {% if roundReste %}
                                                                                        {% for  i in roundReste..1%}
                                                                                            <i class="far fa-star"></i>
                                                                                        {% endfor %}
                                                                                    {% endif %}
                                                                                    {% else %}{#rating is integer#}
                                                                                        {% if total>0 %}
                                                                                            {% for  i in total ..1%}
                                                                                                <i class="fas fa-star"></i>
                                                                                            {% endfor %}
                                                                                    {% if reste>0 %}
                                                                                            {% for  i in reste..1%}
                                                                                                <i class="far fa-star"></i>
                                                                                            {% endfor %}
                                                                                        {% endif %}
                                                                                {% else %} {# rating is 0#}
                                                                                            {% for  i in 5..1%}
                                                                                                <i class="far fa-star"></i>
                                                                                            {% endfor %}
                                                                                        {% endif %}
                                                                                    {% endif %}
                                                                                {% endif %}
                                                                            </span>
                                                                        </div>
                                                                    {% else %}
                                                                        <div class="row justify-content-center">
                                                                            <span class="float-right blued">
                                                                                {% for  i in 5..1%}
                                                                                    <i class="far fa-star"></i>
                                                                                {% endfor %}
                                                                            </span>
                                                                        </div>
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            <div class="col-4 mt-2">
                                                                <div class="float-right driver-request-button">
                                                                    <form method="post" action="{{ url('new_conversation') }}" class="js-user-message">
                                                                        <button class="btn btn-info " >
                                                                            <input type="hidden" name="user" value="{{ driver.user.id }}">
                                                                            <p class="mt-1"><i class="far fa-comments"></i>{#{% trans %} Message to{% endtrans %} {{driver.user.firstname}}#}</p>
                                                                        </button>
                                                                    </form>
                                                                    <button id="driver_request_js" data-toggle="modal" class="btn btn-info my-1 "
                                                                            data-target="#driverRequest-{{ driver.id }}"
                                                                            {% if deal.driverUser %}
                                                                    disabled
                                                                            {% endif %}>
                                                                        <i class="fas fa-truck"></i>
                                                                        {#{% trans %} Driver request{% endtrans %}#}
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                    {% else %}
                                        <div class="border-deal px-4">
                                            <a class="text-center  px-2">
                                                <h4 class="blued">{% trans %} There is no Drivers in this area{% endtrans %}</h4>
                                            </a>
                                        </div>
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


