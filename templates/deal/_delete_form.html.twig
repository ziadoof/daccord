<form method="post" action="{{ path('deal_delete', {'id': deal.id}) }}" onsubmit="return confirm(Translator.trans('Are you sure you want to delete this Deal?'));">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ deal.id) }}">
    <button class="btn">{% trans %} Delete{% endtrans %}</button>
</form>
