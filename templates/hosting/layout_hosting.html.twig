{% extends "layout_user.html.twig" %}

{% block title %}{% trans %}Hosting{% endtrans %}{% endblock %}

{% block content %}
    <h4 class="title-blue text-center">{% trans %}Hosting{% endtrans %}</h4>
    <div class="row">
        <div class="col-md-12">
            {% if app.user is not same as(null) %}
                {% if app.user.hosting %}
                <div class="row">
                    <div class="btn-group btn-block" id="meetup-button">
                        <a class="btn btn-info" href="{{path('hosting_request_index')}}" >{% trans %}Hosting{% endtrans %}</a>
                        <a class="btn btn-info" href="{{path('hosting_request_received')}}">{% trans %}Hosting request{% endtrans %}</a>
                    </div>
                </div>
                {% endif %}
            {% endif %}
            <div class="mt-3">
                {% block hosting %}

                {% endblock %}
            </div>

        </div>
    </div>
{% endblock %}