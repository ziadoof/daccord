{% form_theme form 'bootstrap_3_layout.html.twig' %}
{{ form_start(form, {'attr': {'id': 'hosting-request'},'method': 'post', 'action': path('hosting_request_new', {'hosting': hosting.id}) }) }}

<div class="my-2 ">
    <div class="row " >
        <div class="col-md-6">
            {{ form_row(form.startDate) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.endDate) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.numberOfPersons) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.description) }}
        </div>
    </div>
    <button class="btn btn-info float-right mb-4">{{ button_label|default('Send') }}</button>
</div>
{{ form_end(form) }}
