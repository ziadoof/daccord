{% extends 'base.html.twig' %}

{% block title %}Departments{% endblock %}

{% block body %}
    <h1>Departments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ department.slug }}</td>
            </tr>
            <tr>
                <th>Cities</th>
                {% for city in department.code %}
                <td>{{ city.name }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>RegionCode</th>
                <td>{{ department.regionCode.name }}</td><br>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('departments_index') }}">back to list</a>

    <a href="{{ path('departments_edit', {'id': department.id}) }}">edit</a>

    {{ include('departments/_delete_form.html.twig') }}
{% endblock %}
