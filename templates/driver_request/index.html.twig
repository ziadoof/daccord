{% extends "layout_user.html.twig" %}

{% block title %}{% trans %} Driver Request{% endtrans %}{% endblock %}

{% block content %}
    <h3 class="title-blue text-center">{% trans %}Driver Request {% endtrans %}</h3>
    <div class="row border-bottom-none" >
        <div class="col-md-12">
            <ul class="nav nav-tabs nav-justified pt-2" id="driverRequestTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="waiting-tab" data-toggle="tab" href="#waiting_drivers" role="tab" aria-controls="offer" aria-selected="true">
                        <div class="">
                            {% trans %}In waiting{% endtrans %}
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="done-tab" data-toggle="tab" href="#done_drivers" role="tab" aria-controls="offer" aria-selected="true">
                        <div class="">
                            {% trans %}Done drivers{% endtrans %}
                        </div>
                    </a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active text-align form-new" id="waiting_drivers" role="tabpanel" aria-labelledby="waiting-tab">
                    {% include "driver_request/waiting_drivers.html.twig" %}
                </div>
                <div class="tab-pane fade show text-align form-new " id="done_drivers" role="tabpanel" aria-labelledby="doneDrivers-tab">
                    {% include "driver_request/done_drivers.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
